    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "5.2.0",
    "jest-junit": "6.4.0",
    "lighthouse": "5.1.0",
    "puppeteer": "1.17.0"
